<h1>Real Time Location Sharing</h1>

<% if logged_in? %>
  <%= render 'form', location: @location %>
<% else %>
  <p id='use-app-notice' style='display:none;'>
    Download the iPhone or Android app to share your location
  </p>
<% end %>

<% if logged_in? && !current_user.locations.current.empty? %>
  <Br />
  <h2>You are currently sharing</h2>
  <table>
    <tr>
      <th style="width:60%">Name</th><th>Expires</th>
    </tr>
    <% current_user.locations.current.each do |location| %>
      <tr>
        <td><%= link_to(location.name.present? ? location.name : '<em>unnamed</em>'.html_safe, location_url(location)) %></td>
        <td><%= distance_of_time_in_words(Time.zone.now, location.expires_at) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
